<header class="site-header">
  <div class="nav u-posFixed">
    <ul class="nav-lang">
      {{#langs}}
        <li><a href="{{url}}" >{{name}}</a></li>
      {{/langs}}
    </ul>
    <div class="wrap-width u-textCenter">
      <a href="{{preurl}}"
        <span class="u-floatLeft hand">☜</span>
      </a>
      <a class="filledblock" href="{{indexurl}}">{{workshoppername}}</a>
      <a href="{{nexturl}}"
        <span class="u-floatRight hand">☞</span>
      </a>
    </div>
  </div>
  
  <div class="wrapper">
    <div class="u-floatLeft">
      <span class="all-caps">CHALLENGE</span>
      <h2 class="challenge-name">{{challengetitle}}</h2>
    </div>
    <div class="u-floatRight u-textRight">
      <span class="all-caps">NUMBER</span>
      <h2 class="challenge-name">{{challengenumber}} / {{challengetotal}}</h2>
    </div>
  </div>
</header>